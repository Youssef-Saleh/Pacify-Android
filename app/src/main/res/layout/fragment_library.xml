<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/library_background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="195sp"
        android:layout_height="73sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:text="Playlists"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="44sp"
        android:layout_height="44sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/ic_settings_black_24dp"
         />

    <ListView
        android:id="@+id/playlistView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="130dp">


    </ListView>

    <Button
        android:id="@+id/playlist_add_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playlistView"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/green_roundbutton"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:padding="16dp"
        android:text="Create Playlist" />

</RelativeLayout>