<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151515">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ForgetPass_step3_new_password_text_container"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120sp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/gray_smoothedgebutton"
        android:hint="New Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ForgetPass_step3_new_password_text"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:background="@drawable/gray_smoothedgebutton"
            android:inputType="textPassword"
            android:paddingLeft="8sp"
            android:paddingRight="8sp"
            android:textColor="#FFFFFF"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="20sp"
            android:textStyle="normal" />
    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:id="@+id/ForgetPass_step3_new_password_text_again"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/gray_smoothedgebutton"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:textColor="#FFFFFF"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="20sp"
        android:textStyle="normal"
        android:hint="New Password, again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ForgetPass_step3_new_password_text_container" />

    <Button
        android:id="@+id/ForgetPass_step3_recover_password_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/lightgray_roundbutton"
        android:letterSpacing="0.05"
        android:paddingLeft="22sp"
        android:paddingRight="22sp"
        android:text="Change Password"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ForgetPass_step3_new_password_text_again" />



</androidx.constraintlayout.widget.ConstraintLayout>