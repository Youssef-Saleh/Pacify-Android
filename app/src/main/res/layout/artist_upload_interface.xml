<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_background">

    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:padding="5dp"
        app:srcCompat="@drawable/emspotify" />

    <TextView
        android:id="@+id/userNAme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:text="Emeniem"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="24sp" />

    <Button
        android:id="@+id/UploadSong"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/green_roundbutton"
        android:textColor="#FFFFFF"
        android:text="Upload Song!"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/popularSongstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="220dp"
        android:text="Your Uploaded Songs"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/artistSongsUploads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="60dp" />

</RelativeLayout>