<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginMainMenu">


    <EditText
        android:id="@+id/edit_password_old_password_text"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/gray_smoothedgebutton"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:textColor="#FFFFFF"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="20sp"
        android:textStyle="normal"
        android:hint="Current Password"
        android:maxLength="16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_password_new_password_text"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/gray_smoothedgebutton"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:textColor="#FFFFFF"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="20sp"
        android:textStyle="normal"
        android:hint="New Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_password_old_password_text" />

    <EditText
        android:id="@+id/edit_password_new_password_text_again"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/gray_smoothedgebutton"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:textColor="#FFFFFF"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="20sp"
        android:textStyle="normal"
        android:hint="New Password, again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_password_new_password_text" />

    <Button
        android:id="@+id/edit_password_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/lightgray_roundbutton"
        android:letterSpacing="0.05"
        android:paddingLeft="22sp"
        android:paddingRight="22sp"
        android:text="Change Password"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_password_new_password_text_again" />

    <Button
        android:id="@+id/edit_password_go_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/grayframeondark_rountbutton"
        android:letterSpacing="0.1"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="I changed my mind"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_password_confirm_button" />

</androidx.constraintlayout.widget.ConstraintLayout>